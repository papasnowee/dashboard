{
  "version": "0.1.0",
  "scripts": {
    "dev": "webpack-dev-server --port 3000 --mode development --open --hot",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "start": "",
    "predeploy": "npm run build",
    "prettier": "prettier --write .",
    "lint": "eslint src/**/*.{js,ts,tsx} --fix --max-warnings 0 --no-error-on-unmatched-pattern",
    "test": "jest --no-cache",
    "test:coverage": "npx jest --silent --ci --coverage --coverageReporters='text' --coverageReporters='text-summary'",
    "test:watch": "npm test -- --watch",
    "test:loki": "npm run build-storybook && loki --requireReference --reactUri file:./storybook-static",
    "loki:update": "npm run build-storybook && loki update --requireReference --reactUri file:./storybook-static",
    "loki:approve": "loki approve",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "download-schema": "apollo service:download --endpoint=https://api.thegraph.com/subgraphs/name/harvestfi/harvest-finance graphql-schema.json",
    "codegen": "npm run download-schema && apollo codegen:generate  --globalTypesFile=./src/types/globalTypes.d.ts --localSchemaFile=./graphql-schema.json --target=typescript --tagName=gql",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run prettier"
    ]
  },
  "dependencies": {
    "@apollo/client": "3.3.19",
    "@emotion/core": "10.0.28",
    "@emotion/styled": "10.0.27",
    "@walletconnect/web3-provider": "1.3.1",
    "axios": "0.21.1",
    "bignumber.js": "9.0.1",
    "browserify": "16.5.2",
    "dotenv": "10.0.0",
    "ethers": "5.1.0",
    "framer-motion": "3.0.0",
    "graphql": "15.5.0",
    "mobx": "6.2.0",
    "mobx-react": "7.1.0",
    "react": "16.13.1",
    "react-app-polyfill": "1.0.6",
    "react-audio-spectrum": "0.1.0",
    "react-dev-utils": "10.2.1",
    "react-dom": "16.13.1",
    "react-loadable": "5.5.0",
    "react-modal-resizable-draggable": "0.1.4",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "web3": "1.3.5",
    "web3modal": "1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/jest": "11.3.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@svgr/webpack": "4.3.3",
    "@types/enzyme": "^3.10.8",
    "@types/graphql": "14.5.0",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router": "^5.1.13",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "apollo": "2.33.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "27.0.2",
    "babel-loader": "8.1.0",
    "babel-plugin-named-asset-import": "^0.3.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "3.4.2",
    "dotenv-webpack": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "4.3.0",
    "gh-pages": "^3.1.0",
    "graphql-tag": "^2.12.4",
    "html-webpack-plugin": "4.0.0-beta.11",
    "husky": "^7.0.0",
    "image-webpack-loader": "^7.0.1",
    "jest": "27.0.3",
    "jest-emotion": "^11.0.0",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-resolve": "24.9.0",
    "jest-watch-typeahead": "0.4.2",
    "lint-staged": "^10.2.2",
    "lodash.sortby": "^4.7.0",
    "loki": "^0.20.3",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "^4.0.0",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "postcss-normalize": "8.0.1",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "4.0.1",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "storybook-addon-react-docgen": "^1.2.32",
    "style-loader": "0.23.1",
    "styled-bootstrap-grid": "^3.1.0",
    "styled-components": "^5.2.0",
    "styled-reset": "^4.2.3",
    "ts-node": "^8.10.1",
    "typescript": "4.2.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "browser": {
    "fs": false
  },
  "jest": {
    "modulePaths": [
      "/shared/vendor/modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "^react(.*)$": "<rootDir>/vendor/react-master$1",
      "^config$": "<rootDir>/configs/app-config.js"
    },
    "verbose": true,
    "testEnvironment": "node"
  }
}
